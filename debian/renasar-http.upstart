description "run the renasar http service"

env config=/etc/default/renasar-http

start on (started rabbitmq-server and started mongodb)
stop on runlevel [!2345]
respawn

pre-start script
[ -e "$config" ] || { echo "${config} missing, not starting"; stop; exit 0; }
end script

script
    echo Starting renasar http service
    chdir /var/renasar/renasar-http
    exec /usr/bin/nodejs /var/renasar/renasar-http/index.js
end script
