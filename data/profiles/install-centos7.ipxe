echo Starting CentOS 7 x64 installer for ${hostidentifier}
set base-url http://<%=server%>:<%=port%>/centos/7/os/x86_64/images/pxeboot
set repo http://<%=server%>:<%=port%>/centos/7/os/x86_64
set params ks=http://<%=server%>:<%=port%>/api/common/templates/centos70-ks BOOTIF=01-${netX/mac:hexhyp} ip=<%=ipaddress%>::<%=gateway%>:<%=netmask%>:<%=hostname%>::off
kernel ${base-url}/vmlinuz repo=${repo} ${params}
initrd ${base-url}/initrd.img
boot || prompt --key 0x197e --timeout 2000 Press F12 to investigate || exit shell

